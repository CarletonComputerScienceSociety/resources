---
import { CircleIcon } from "../CircleIcon";
import "./TopicCard.style.scss";

const { title, description, icon, colorSet } = Astro.props;
---

<div class="topic-card">
  <div class="topic-card__content">
    <div class="topic-card__heading">
      <CircleIcon icon={icon} colorSet={colorSet} size="size-normal" />
      <h3 class="topic-card__title">{title}</h3>
    </div>

    <p class="topic-card__description">{description}</p>
  </div>
</div>
