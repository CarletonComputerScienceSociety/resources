---
import { getCollection } from "astro:content";
import { Navbar } from "../components/resources";
import { TopicCard } from "../components/core";
import { Icon } from "astro-icon";
import Base from "../layouts/Base.astro";
import "./resources.style.scss";

const metadata = {
  title: "Resources",
  description: "tbd",
  url: "/resources",
  image: "/",
};

const resourcePages = await getCollection("resources");
---

<Base {metadata}>
  <Navbar />
  <div style="margin-top:5rem"></div>
  <div class="resources-page__heading">
    <h1 class="resource-page__heading-title">Resources</h1>
    <p class="resources-page__heading-subtitle">
      Resources created by students for students.
    </p>
    <input type="text" placeholder="Search" />
  </div>
  <div class="resources-page__cards">
    <TopicCard
      title={"Student Experience"}
      description={"Section overview goes here. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."}
      icon={"mdi:home"}
    />
    <TopicCard
      title={"Academics"}
      description={"Section overview goes here. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."}
      icon={"mdi:school"}
    />
    <TopicCard
      title={"Courses"}
      description={"Section overview goes here. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."}
      icon={"mdi:calendar"}
    />
    <TopicCard
      title={"Self-Learning"}
      description={"Section overview goes here. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."}
      icon={"mdi:book-open-page-variant"}
    />
    <TopicCard
      title={"Careers"}
      description={"Section overview goes here. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."}
      icon={"mdi:briefcase"}
    />
    <TopicCard
      title={"FAQs"}
      description={"Section overview goes here. Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor."}
