---
import { getCollection } from "astro:content";
import ResourceLayout from "../../layouts/Resource.astro";

export async function getStaticPaths() {
  const resourcePages = await getCollection("resources");
  return resourcePages.map((page) => ({
    params: { slug: page.slug.replace("resources/", "") },
    props: { page },
  }));
}

const { page } = Astro.props;
const { Content } = await page.render();
---

<ResourceLayout frontmatter={page.data}>
  <Content />
</ResourceLayout>
